# Configuração da Base de Dados (Ambiente Local)
DB_NAME=luz_y_verdad
DB_USER=postgres # Substitua pelo seu usuário PostgreSQL local
DB_PASSWORD=postgres # Substitua pela sua senha PostgreSQL local
DB_HOST=localhost # Ou 127.0.0.1
DB_PORT=5432

# Configuração de Django
DJANGO_SECRET_KEY=django-insecure-luz-y-verdad-secret-key-local-dev
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Configuração de Segurança (Ajuste conforme necessário para desenvolvimento local)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

